// app global css
* {
  font-family: 'Playfair Display', serif;
}
.contenedor {
  width: 85%;
}
h1 {
  font-size: 5vw;
  font-weight: 1000;
}
h2 {
  font-size: 3vw;
}
p {
  font-size: 1.8vw;
  color: grey;
  text-align: justify;
}
h6 {
  display: inline;
  margin-left: 10px;
  font-size: 2vw;
}
@media (max-width: 992px) {
  h1 {
  font-size: 40px;
  font-weight: 1000;
  }
  h2{
    font-size: 30px;
  }
  h6{
    font-size: 20px;
  }
  p {
    font-size: 20px;
    text-align: justify;
  }
}
@media (max-width: 360px) {
  body {
    width: 360px
  }
  .contenedor {
    width: 95% !important;
  }
}
@media (max-width: 320px) {
  body {
    width: 320px
  }
}
